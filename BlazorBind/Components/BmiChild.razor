<div style="background-color:orange">
    <h2>子コンポーネント</h2>
    <div>
        Height: @Height cm,
        Weight: @Weight kg. 
    </div>
    <div>
        BMI is @result
    </div>
</div>

@code {
    private double Height { get; set; } = 160.0;
    private double result { get; set; }
    private double _Weight = 60.0;

    //パラメータでWeightが変更された時にresultを再計算する
    [Parameter]
    public double Weight
    {
        get => _Weight;
        set
        {
            _Weight = value;
            this.result = Weight / ((Height / 100) * (Height / 100));
        }
    }

    //パラメータの変更を受け付ける時に必須、MVVMのtwowayと同じ
    [Parameter]
    public EventCallback<double> WeightChanged { get; set; }

}

